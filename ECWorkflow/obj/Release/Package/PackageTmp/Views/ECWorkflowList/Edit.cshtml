@model ECWorkflow.Models.vECWorkflowList
@{
    ViewBag.Title = "產測料號新增";
}

<style>
    .vertical-margin .row {
        margin-bottom: 20px; /* 自定義的垂直間距 */
    }

    .table-margin-top {
        margin-top: 20px; /* 自訂的上方間距大小 */
    }

    .table-fixed-150px {
        width: 150px; /* 固定列宽度为100像素 */
        white-space: normal; /* 允许文本换行 */
        word-wrap: break-word; /* 允许单词换行 */
    }
</style>
<script>
    $(document).ready(function () {
        $('.input-daterange').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true
        });
    });

</script>
<h2>產測料號-申請</h2>
<div class="table-margin-top">

</div>
<div class="form-group">

    <form action="/ECWorkflowList/Save" method="POST">
        <div class="row table-margin-top">
            <div class="col-md-2">
                <label for="queryText">申請日期：</label>
                <input type="text" name="chApplyDate" id="chApplyDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly="readonly">
            </div>
            <div class="col-md-2">
                <label for="queryText">申請者：</label>
                <input type="text" name="chCreater" id="chCreater" class="form-control" value="@Model.chCreater">
            </div>
            <div class="col-md-6">
                <label for="queryText">流水號：</label>
                <input type="text" name="chTPNo" id="chTPNo" class="form-control value="@Model.chTPNo">
            </div>
            <div class="col-md-2">
                <label for="queryText">版本號：</label>
                <input type="text" name="chTPNo2" id="chTPNo2" class="form-control" value="@Model.chTPNo2PlusOne" readonly="readonly">
            </div>
        </div>
        <div class="row table-margin-top">
            <div class="col-md-2">
                <label for="queryText">料號：</label>
                <input type="text" name="chModelNo" id="chModelNo" class="form-control" value="@Model.chModelNo" readonly="readonly">
            </div>
            <div class="col-md-8">
                <label for="queryText">機種名稱：</label>
                <input type="text" name="chModelName" id="chModelName" class="form-control" value="@Model.chModelName" readonly="readonly">
            </div>
            <div class="col-md-2">
                <label for="queryText">程式名稱：</label>
                <input type="text" name="chTPBasic" id="chTPBasic" class="form-control" value="@Model.chTPBasic" readonly="readonly">
            </div>
        </div>
        <div class="row table-margin-top">
           <div class="col-md-12">
                <label for="queryText">申請程式版本名稱：</label>
                <input type="text" name="chTPName" id="chTPName" class="form-control" value="@Model.chTPNameCombine" readonly="readonly">
            </div>
        </div>
        <div class="row table-margin-top">

            <div class="col-md-6">
                <label for="queryText">狀態：</label>
                <input type="text" name="chStatus" id="chStatus" class="form-control" value="@Model.chStatus" readonly="readonly">
            </div>
        </div>
        <div class="row table-margin-top">
            <div class="col-md-5">

            </div>
            <div class="col-md-3">
                <button class="btn btn-success" type="submit">產測料號申請</button>
                <a onclick="window.location.href='@Url.Action("List", "ECWorkflowList")'" class="btn btn-warning" >返回</a>
            </div>
            <div class="col-md-5">

            </div>
        </div>
    </form>
</div>
<h2>產測料號-申請紀錄</h2>
<div class="row">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.chApplyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chModelNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chTPNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chTPNo2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chTPName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chTPAll)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chStatus)
            </th>
        </tr>

        @foreach (var item in Model.List)
        {
    <tr>
        <td>
            @item.chApplyDate.ToString("yyyy-MM-dd")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chModelNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chTPNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chTPNo2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chTPName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chTPAll)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.chStatus)
        </td>
    </tr>
        }

    </table>
</div>